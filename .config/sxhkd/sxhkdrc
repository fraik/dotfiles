# Make sxhkd reload its configuration.
super + shift + r
	pkill -USR1 -x sxhkd

# Increase brightness.
XF86MonBrightnessUp
    xbacklight -inc 3

# Decrease brightness.
XF86MonBrightnessDown
    xbacklight -dec 3

# Increase volume.
XF86AudioRaiseVolume
    amixer set Master 3+

# Decrease volume.
XF86AudioLowerVolume
    amixer set Master 3-

# Start a terminal.
super + Return
	st -e bash -l

# Start dmenu.
super + m
	dmenu_custom

# Switch between running applications.
super + Tab
	dmenu_switch

# Lock screen.
super + l
    slock

# Quit window manager.
super + shift + q
	bspc quit

# Quit or close window / application.
super + q
	bspc node -c

# Cycle between monocle/tiled presentation.
super + t
	bspc desktop -l next

# Balance size of curent windows.
super + b
    bspc node @focused:/ -B

# Set window to fullscreen.
super + f
    bspc config window_gap {0,30}
	#bspc node -t ~fullscreen

# Set window to floating.
super + shift + f
	bspc node -t ~floating

# Switch between current and last desktop.
super + grave
	bspc desktop -f last

# Move a window.
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Switch to desktop.
super + {1,2,3,4,5,6,7,8,9,0}
	bspc desktop -f {1,2,3,4,5,6,7,8,9,0}

# Move window to desktop.
super + shift + {1,2,3,4,5,6,7,8,9,0}
	bspc node -d {1,2,3,4,5,6,7,8,9,0}

# Step to next/prev window focus.
super + {_,shift + }c
	bspc node -f {next,prev}

# Switch through windows on desktop.
super + {comma,period}
	bspc desktop -C {backward,forward}

# Switch through desktops.
super + bracket{left,right}
	bspc desktop -f {prev,next}

# Point to where you create the next window.
super + ctrl + {Left,Down,Up,Right}
    bspc node --presel-dir {west,south,north,east}

# Resize windows with keyboard.
super + alt + {Left,Down,Up,Right}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# Resize windows with keyboard - reverse.
super + alt + shift + {Left,Down,Up,Right}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Resize windows with mouse.
super + button{1-3}
	bspc node pointed -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc node pointed -u

# Focus window on left-mouse-click.
~button1
    bspc node pointed -f

